<body style="background-color:#1111">
    <div class="d-flex justify-content-center align-items-center" style="margin-top:180px">
        <div class="registration-container">
            <div class="card">
                <div class="card-body login-card-body">
                    <h1>Forgot Password</h1><br />
                    <form asp-action="Send">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="ToEmail" class="control-label">Email</label>
                        <input asp-for="ToEmail" placeholder="Email" class="form-control" style="width:99%" />
                        <span asp-validation-for="ToEmail" class="text-danger"></span>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


