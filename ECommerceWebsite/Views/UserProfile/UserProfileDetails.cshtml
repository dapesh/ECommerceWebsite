@model List<UserPhoto>
<div class="card">
    <div class="card-header">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    User Profile
                </div>
                <div class="col-md-4">
                    <div class="profile-picture">
                        @foreach(var profilePicture in Model)
                        {
                            @if (string.IsNullOrEmpty(profilePicture.PhotoUrl))
                            {
                                <img src="~/files/DefaultProfilePicture.png" alt="Default Profile Picture" class="rounded-circle profile-image" style="width: 300px; height: 300px; cursor: pointer;" data-toggle="modal" data-target="#profilePictureModal" />
                            }

                            else if (profilePicture.IsMain == true)
                            {
                                <img src="@profilePicture.PhotoUrl" alt="Profile Picture" class="rounded-circle profile-image" style="width: 300px; height: 300px; cursor: pointer;" data-toggle="modal" data-target="#profilePictureModal" />

                            }
                        }

                    </div>
                </div>
                <div class="col-md-4 text-right">
                    <!-- Button to Open Full-Size Profile Picture -->
                    <button type="button" class="btn  btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
                        Upload Photo
                    </button>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("UploadImage", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class ="row">

                                <div class="col-md-6">
                                    <input type="file" name="file" />
                                </div>
                                <div class="col-md-6">
                                    <label for="dropdown">Photo Type</label>
                                    <select class="form-control" id="dropdown" name="selectedOption">
                                        @foreach (var item in ViewBag.DropDownItems)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" value="Upload" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
